@model ShopWeb.Models.Domain.Response

<h1>Delete Response</h1>

<h3>Are you sure you want to delete this response?</h3>
<div>
    <h4>Id: @Model.Id</h4>
    <h4>User Id: @Model.UserId</h4>
    <h4>Heading: @Model.Heading</h4>
    <h4>Content: @Model.Content</h4>
    <h4>Created At: @Model.CreatedAt</h4>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index">Back to List</a>
</form>
