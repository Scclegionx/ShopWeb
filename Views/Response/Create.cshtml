@using Microsoft.AspNetCore.Identity;
@using ShopWeb.Models.Domain;
@inject UserManager<ApplicationUser> userManager
@model ShopWeb.Models.ViewModels.ResponseVM.ResponseViewModel


<div id="response-container">

    <h1>Create New Response</h1>

    <form asp-action="Create">
        <input type="hidden" asp-for="UserId" value="@userManager.GetUserId(User)" />
        <div class="form-group">
            <label asp-for="Heading"></label>
            <input asp-for="Heading" class="form-control" />
            <span asp-validation-for="Heading" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>

    <a asp-action="customerIndex">Back to List</a>
</div>
