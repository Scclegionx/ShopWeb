@model ShopWeb.Models.ViewModels.SaleVM.SaleViewModel;

@{
    ViewBag.Title = "Set Sale";
}

<div id="sale-container">

    <h2>Set Sale</h2>
    @using (Html.BeginForm("SetSale", "AdminSale", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.ProductId, "Product")
            @Html.DropDownListFor(m => m.ProductId, new SelectList(ViewBag.Products, "Id", "Name"), "Select a product", new { @class = "form-control select2" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SalePrice, "Sale Price")
            @Html.EditorFor(m => m.SalePrice, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SaleEndDate, "Sale End Date")
            @Html.EditorFor(m => m.SaleEndDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        </div>
        <button type="submit" class="btn btn-primary">Set Sale</button>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}
