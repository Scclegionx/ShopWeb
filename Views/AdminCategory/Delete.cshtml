@model ShopWeb.Models.ViewModels.EditCategoryRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Delete Categories - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <h2>Bạn có chắc muốn xóa "@Model.Name"?</h2>
</div>

<div class="container py-5">
    @using (Html.BeginForm("Add", "AdminCategory", FormMethod.Post))
    {
        <div class="col-md-8 mb-3">
            @Html.LabelFor(m => m.Id, new { @class = "col-md-4 control-label" })
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = true })
        </div>
        <div class="col-md-8 mb-3">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="col-md-8 mb-3">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-4 control-label" })
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-dark">Delete</button>
    }
    <a 
        asp-area=""
        asp-action="List"
        asp-controller="AdminCategory"
        >Cancel</a>
</div>

