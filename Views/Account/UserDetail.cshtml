@model ShopWeb.Models.Domain.ApplicationUser;

@{
    ViewBag.RenderDefaultNavbar = false;
}


@await Html.PartialAsync("SideNavBar")

<div class="bg-secondary bg-opacity-10 py-2" style="margin-left: 200px;">
    <div class="container">
        <h1>User Detail - User Functionality</h1>
    </div>
</div>


<div class="container py-5" id="user-detail-container">
    <div class="col-md-8 mb-3">
        @Html.LabelFor(m => m.Avatar, new { @class = "col-md-4 control-label" })
        @Html.TextBoxFor(m => m.Avatar, new { @class = "form-control", @readonly = true })
    </div>
    <div class="col-md-8 mb-3">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label" })
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = true })
    </div>
    <div class="col-md-8 mb-3">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = true })
    </div>
    <div class="col-md-8 mb-3">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-4 control-label" })
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @readonly = true })
    </div>
</div>