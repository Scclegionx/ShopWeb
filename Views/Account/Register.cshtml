@model ShopWeb.Models.ViewModels.RegisterVM.RegisterViewModel;
@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6" id="register-container">

            <h1 class="mt-3 mb-3 h3">
                Register
            </h1>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                <!-- Display validation errors -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-4 control-label" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Register</button>
                </div>
            }

        </div>
    </div>
</div>
