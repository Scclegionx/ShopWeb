            <li><a asp-area="" asp-controller="Purchase" asp-action="Tracking">Tracking</a></li>
        }
        @if (signInManager.IsSignedIn(User) && User.IsInRole("Shipper"))
        {
            <li><a asp-area="" asp-controller="Shipper" asp-action="MyOrder">Đơn ship của bạn</a></li>
        }
        <li><a asp-area="" asp-controller="Response" asp-action="customerIndex">Trợ giúp</a></li>
