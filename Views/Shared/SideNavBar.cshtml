        {
            <li><a asp-area="" asp-controller="Account" asp-action="LikedProducts">Sản phẩm yêu thích</a></li>
            <li><a asp-area="" asp-controller="Purchase" asp-action="Index">Đơn hàng của bạn</a></li>
