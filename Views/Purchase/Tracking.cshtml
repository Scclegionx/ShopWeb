@model List<ShopWeb.Models.Domain.Purchase>

@{
    ViewBag.RenderDefaultNavbar = false;
}

@await Html.PartialAsync("SideNavBar")

<h1>Purchase Tracking</h1>

@if (Model != null && Model.Any())
{
    <div id="tracking-container">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>State</th>
                    <!-- Add more columns as needed -->
                </tr>
            </thead>
            <tbody>
                @foreach (var purchase in Model)
                {
                    <tr>
                        <td>@purchase.Id</td>
                        <td>@purchase.PurchaseDate</td>
                        @if (purchase.State == "None")
                        {
                            <td>Đơn hàng đang được kiểm duyệt để gửi đi</td>
                        } else
                        {
                            <td>@purchase.State</td>
                        }
                        <!-- Add more cells as needed -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No purchases available for tracking.</p>
}
